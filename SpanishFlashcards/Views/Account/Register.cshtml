@model SpanishFlashcards.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = null;
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-8">
        <section id="registerForm">
            <form class="form-horizontal" data-ng-submit="securityCtrl.register()">
                @*@Html.AntiForgeryToken()*@
                <h4>Create a new account.</h4>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    <label name="Email" class="col-md-3 control-label" for="Email">Email</label>
                    <div class="col-md-9">
                        <input name="Email" class="form-control focus" id="email" type="text" data-val-required="The Email field is required." 
                               data-val-email="The Email field is not a valid e-mail address." data-val="true" data-ng-model="securityCtrl.email"/>
                        <span class="field-validation-valid text-danger" data-valmsg-replace="true" data-valmsg-for="Email"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label name="Password" class="col-md-3 control-label" for="Password">Password</label>
                    <div class="col-md-9">
                        <input name="Password" class="form-control" id="password" type="password" data-val-required="The Password field is required." 
                               data-val="true" data-ng-model="securityCtrl.password"/>
                        <span class="field-validation-valid text-danger" data-valmsg-replace="true" data-valmsg-for="Password"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label name="ConfirmPassword" class="col-md-3 control-label" for="ConfirmPassword">Confirm Password</label>
                    <div class="col-md-9">
                        <input name="ConfirmPassword" class="form-control" id="confirmPassword" type="password" 
                               data-val-required="The Confirm Password field is required." data-val="true" data-ng-model="securityCtrl.confirmPassword"/>
                        <span class="field-validation-valid text-danger" data-valmsg-replace="true" data-valmsg-for="ConfirmPassword"></span>
                    </div>
                </div>
                <div class="form-group">
                    <span class="text-danger">{{ securityCtrl.getErrorMessage() }}</span>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-3 col-md-9">
                        <input type="submit" class="btn btn-default" value="Register" />
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
