<div ng-controller="CardController as controller">
    <card-panel class="panel" ng-show="navCtrl.isSelected('Card')"></card-panel>
    <about-panel class="panel" ng-show="navCtrl.isSelected('About')"></about-panel>
    <contact-panel class="panel" ng-show="navCtrl.isSelected('Contact')"></contact-panel>
    <manage-panel class="panel" ng-show="navCtrl.isSelected('Manage')"></manage-panel>
    <register-panel class="panel" ng-show="navCtrl.isSelected('Register')"></register-panel>
    <login-panel class="panel" ng-show="navCtrl.isSelected('Login')"></login-panel>
</div>

<div ng-controller="CardAdminController as controller">
    <card-admin-panel class="panel" ng-show="navCtrl.isSelected('CardAdmin')"></card-admin-panel>
    <create-card-panel class="panel" ng-show="navCtrl.isSelected('CreateCard')"></create-card-panel>
    <edit-card-panel class="panel" ng-show="navCtrl.isSelected('EditCard')"></edit-card-panel>
    <delete-card-panel class="panel" ng-show="navCtrl.isSelected('DeleteCard')"></delete-card-panel>
</div>

