@model SpanishFlashcards.ViewModels.CardViewModel

@{
    ViewBag.Title = "Create";
    Layout = null;
}

<h2>Create</h2>

<form class="form-horizontal" data-ng-submit="ctrl.saveNewCard()">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <fieldset>
        <legend>Card</legend>

        <div class="row form-horizontal">
            <div class="editor-label">
                <label class = "control-label col-md-1" for="spanish">Spanish</label>
            </div>
            <div class="col-md-2 focus">
                <input name="spanish" class = "form-control text-box single-line focus" id="spanish" type="text" data-val-required="The Spanish field is required." data-val-maxlength-max="35" data-val-maxlength="The Spanish field must be a string or array type with a maximum length of '35'." data-val="true" value=""/>
                <span class="field-validation-valid" text-danger" data-valmsg-replace="true" data-valmsg-for="spanish"></span>
            </div>

            <div class="editor-label">
                <label class="control-label col-md-1" for="english">English</label>
            </div>
            <div class="col-md-2">
                <input name="english" class="form-control text-box single-line" id="english" type="text" data-val-required="The English field is required." data-val-maxlength-max="35" data-val-maxlength="The English field must be a string or array type with a maximum length of '35'." data-val="true" value="" />
                <span class="field-validation-valid" text-danger" data-valmsg-replace="true" data-valmsg-for="english"></span>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2" for="partOfSpeech">Part of Speech</label>
                <div class="col-md-2">
                    <select class="form-control" name="partOfSpeech" id="partOfSpeech" data-val-required="The Part of Speech field is required." data-val="true">
                        <option ng-repeat="partOfSpeech in ctrl.partsOfSpeech" value="{{ partOfSpeech.id }}">{{ partOfSpeech.name }}</option>
                    </select>
                    <span class = "field-validation-valid text-danger" data-valmsg-replace="true" data-valmsg-for="partOfSpeech"></span>
                </div>
            </div>
        </div>
    </fieldset>

    <p>
        <input type="submit" value="Create" class="btn btn-default" /> |
        @*@Html.ActionLink("Back to List", "Index")*@
        <a ui-sref="admin">Back to List</a>
    </p>
</form>
