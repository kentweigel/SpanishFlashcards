@model SpanishFlashcards.ViewModels.CardViewModel

@{
    ViewBag.Title = "Create";
    Layout = null;
}

<h2>Create</h2>

<form class="form-horizontal" data-ng-submit="ctrl.saveNewCard()">
    @*@Html.AntiForgeryToken()*@
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <fieldset>
        <legend>Card</legend>

        <div class="row form-horizontal">
            <div class="editor-label">
                <label class="control-label col-md-1" for="spanish">Spanish</label>
            </div>
            <div class="col-md-2 focus">
                <input name="spanish" class = "form-control text-box single-line focus" id="spanish" type="text" data-ng-required="required" data-ng-model="ctrl.currentCard.spanish"/>
                <span class="field-validation-valid" text-danger" data-valmsg-replace="true" data-valmsg-for="spanish"></span>
            </div>

            <div class="editor-label">
                <label class="control-label col-md-1" for="english">English</label>
            </div>
            <div class="col-md-2">
                <input name="english" class="form-control text-box single-line" id="english" type="text" data-ng-required="required" data-ng-model="ctrl.currentCard.english" />
                <span class="field-validation-valid" text-danger" data-valmsg-replace="true" data-valmsg-for="english"></span>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2" for="partOfSpeech">Part of Speech</label>
                <div class="col-md-2">
                    <select class="form-control" name="partOfSpeech" id="partOfSpeech" data-ng-required="required" data-ng-model="ctrl.currentCard.partOfSpeech">
                        <option ng-repeat="partOfSpeech in ctrl.partsOfSpeech" value="{{ partOfSpeech.name }}">{{ partOfSpeech.name }}</option>
                    </select>
                    <span class = "field-validation-valid text-danger" data-valmsg-replace="true" data-valmsg-for="partOfSpeech"></span>
                </div>
            </div>
        </div>
    </fieldset>

    <p>
        <input type="submit" value="Create" class="btn btn-default" /> |
        @*@Html.ActionLink("Back to List", "Index")*@
        <a ui-sref="admin">Back to List</a>
    </p>
</form>
