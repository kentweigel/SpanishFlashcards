@model SpanishFlashcards.EF.Models.Card

@{
    ViewBag.Title = "Delete";
    Layout = null;
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Card</legend>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Spanish)
        </dt>

        <dd>
            <span>{{ ctrl.currentCard.spanish }}</span>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.English)
        </dt>

        <dd>
            {{ ctrl.currentCard.english }}
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PartOfSpeech)
        </dt>

        <dd>
            {{ ctrl.currentCard.partOfSpeech }}
        </dd>
    </dl>
</fieldset>
<form class="form-horizontal" data-ng-submit="ctrl.deleteCard(ctrl.currentCard.id)">
    @*@Html.AntiForgeryToken()*@
    <p>
        <input type="submit" value="Delete" class="btn btn-default" /> |
        @*@Html.ActionLink("Back to List", "Index")*@
        <a ui-sref="admin">Back to List</a>
    </p>
</form>
